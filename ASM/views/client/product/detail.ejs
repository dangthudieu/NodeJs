<%- include('../layouts/header.ejs') %>

<main class="mt-3">
  <h1 class="text-center">
    Chi Tiết <span class="text-info"><%= product.name %></span>
  </h1>
  <div class="container">
    <section class="row mt-5">
      <div class="col-4">
        <img
          src="/images/product/<%= product.img %>"
          class="img-fluid card-img-top rounded"
          width="100%" height="200px"
          alt="img"
        />
      </div>
      <div class="col-7 card border-0 p-3 rounded bg-light ">
        <h3 class="text-center text-info"><%= product.name %></h3>
        
        <div class="card-body">
            
          <p><span><b>Giá:</b> <%= product.price %> VND</span></p>
          <span><b>Mô tả:</b> <%= product.description %> </span>
        </div>
      </div>
    </section>
  </div>
</main>
<%- include('../layouts/footer.ejs') %>
